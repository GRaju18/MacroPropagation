<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog id="createClone" class="sapUiSizeCompact iconDialog waterDialog" stretch="{device>/system/phone}" draggable="true">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="Record Residue"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<FlexBox direction="Column">
				<InputListItem label="Batch ID">
					<Select id="batchID" width="17rem" items="{path: 'jsonModel>/UniqueBatchIDList'}" forceSelection="false">
						<core:Item key="{jsonModel>IntrSerial}" text="{jsonModel>IntrSerial}"/>
					</Select>
				</InputListItem>
				<InputListItem label="Waste Net Weight">
					<Input id="wasteWt" width="17rem" required="true" type="Number" change="onCalculateGross"/>
				</InputListItem>
				<InputListItem label="{i18n>WasteUOM}">
					<Select width="17rem" id="uom" forceSelection="false" items="{path: 'jsonModel>/uomVals'}">
						<core:Item key="{jsonModel>key}" text="{jsonModel>text}"/>
					</Select>
				</InputListItem>
				<InputListItem label="Bag Weight (g)">
					<Input id="bagWt" width="17rem" required="true" type="Number" change="onCalculateGross"/>
				</InputListItem>
				<InputListItem label="Gross Weight (g)">
					<Input id="grossWt" width="17rem" required="true" type="Number" editable="false"/>
				</InputListItem>
				<InputListItem label="{i18n>Reason}">
					<Select id="reason" width="17rem" items="{path: 'jsonModel>/WasteReasonsList'}" forceSelection="false">
						<core:Item key="{jsonModel>Name}" text="{jsonModel>Name}"/>
					</Select>
					<!--<SearchField width="17rem" id="reason" search="onSearchLicense" enableSuggestions="true" suggestionItems="{jsonModel>/WasteReasonsList}"-->
					<!--	suggest="onSuggestLocation" value="{jsonModel>/selectedReason}">-->
					<!--	<SuggestionItem text="{jsonModel>Name}"/>-->
					<!--</SearchField>-->
				</InputListItem>
				<InputListItem label="{i18n>Notes}">
					<Input id="notes" width="17rem" required="true"/>
				</InputListItem>
				<InputListItem label="{i18n>WasteRecordDate}">
					<DatePicker id="wRecDate" width="17rem" displayFormat="yyyy-MM-dd" required="true"/>
				</InputListItem>
			</FlexBox>
		</content>
		<beginButton>
			<Button type="Emphasized" text="Record Residue" press="onRecordResidue"/>
		</beginButton>
		<endButton>
			<Button type="Transparent" text="{i18n>Cancel}" press="closeRecordWaste"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>